<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.temperature.TemperatureFragment"
    android:background="@drawable/fondoapp">

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="17dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="16dp"
        app:cardBackgroundColor="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="141dp">


            <TextView
                android:id="@+id/textViewTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Dispositivo de medición  1"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textViewSubtituloTemperatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitulo"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat_light"
                android:text="Temperatura"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txtViewIndiceTemperatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewSubtituloTemperatura"
                android:layout_marginStart="12dp"
                android:layout_marginTop="-1dp"
                android:text="0°C"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textViewSubtituloHumedad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtViewIndiceTemperatura"
                android:layout_marginStart="13dp"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/montserrat_light"
                android:text="Humedad"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txtViewIndiceHumedad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewSubtituloHumedad"
                android:layout_alignParentStart="true"
                android:layout_marginStart="13dp"
                android:layout_marginTop="-1dp"
                android:text="0%"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="131dp"
                android:layout_height="112dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="0dp"
                android:src="@drawable/logo" />

</RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="17dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="16dp"
        app:cardBackgroundColor="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="141dp">


            <TextView
                android:id="@+id/textViewTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Dispositivo de medición  2"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txtGas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTitle2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat_light"
                android:text="Gas metano"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txtIndiceGas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtGas"
                android:layout_marginStart="12dp"
                android:layout_marginTop="-1dp"
                android:text="0 ppm"
                android:textColor="@color/black" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="131dp"
                android:layout_height="112dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="0dp"
                android:src="@drawable/logo" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Ambiente"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"/>

    <ImageButton
        android:id="@+id/btnRefrescarTemp"
        style="@android:style/Widget.DeviceDefault.Light.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="330dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#61CC65"
        app:srcCompat="@drawable/baseline_rotate_left_24"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />



</FrameLayout>